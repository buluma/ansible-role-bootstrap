---
extends: default

rules:
  comments:
    min-spaces-from-content: 1
  braces:
    max-spaces-inside: 1
    level: error
  brackets:
    max-spaces-inside: 1
    level: error
  octal-values:
    forbid-implicit-octal: true
  line-length: disable
  truthy: disable
  comments-indentation: false

ignore: |
  .cache/
